<div class='container'>
  <div class='row' style="margin: 20px 0 0 0;">
    <div class='col-4'>
      <h1>ユーザー詳細</h1>
      <table class='table'>
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %></td>
        </tr>
        <tr>
          <th>follows</th>
          <td><%= link_to @user.followings.count, admin_user_followings_path(@user) %></td>
        </tr>
        <tr>
          <th>followers</th>
          <td><%= link_to @user.followers.count, admin_user_followers_path(@user) %></td>
        </tr>
        <tr>
          <th>会員id</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>名前</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @user.is_active? ? '有効' : '退会' %></td>
        </tr>
        <tr>
          <th>レベル</th>
          <td>
            <div id="level<%= @user.id %>"></div>
            <script>
              $(document).on('turbolinks:load', function() {
                let elem = document.querySelector('#level<%= @user.id %>');
                if (elem == null) return;
                elem.innerHTML = "";
                let opt = {
                  size      : 36,
                  starOff   : '<%= asset_path('star-off.png') %>',
                  starOn    : '<%= asset_path('star-on.png') %>',
                  half      : false,
                  readOnly  : true,
                  score     : <%= @user.level %>
                }
                raty(elem, opt);
              });
            </script>
          </td>
        </tr>
        <tr>
          <th>好きなショット</th>
          <td><%= @user.shot %></td>
        </tr>
        <tr>
          <th>性別</th>
          <td><%= @user.is_sex? ? '男性' : '女性' %></td>
        </tr>
        <tr>
          <th>活動拠点</th>
          <td><%= @user.region.name %></td>
        </tr>
        <tr>
          <th>自己紹介</th>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td colspan="2">
            <%= link_to "退会させる", admin_user_path, method: :delete, class:"btn btn-danger" %>
          </td>
        </tr>
      </table>
    </div>
    <div class='col-8'>
      <h1><%= @user.name %>さんの過去の投稿</h1>
      <table class="table table-strip">
        <thead>
          <tr>
            <th></th>
            <th>名前</th>
            <th>性別</th>
            <th>レベル</th>
            <th>投稿文</th>
            <th>コメント数</th>
          </tr>
        </thead>
        <tbody>
          <% @user.posts.each do |post| %>
            <tr>
              <td><%= image_tag(post.user.get_profile_image(80,80), class: "rounded-circle") %></td>
              <td><%= post.user.name %></td>
              <td><%= post.user.is_sex == "man" ? '男性' : '女性' %></td>
              <td><div id="level-<%= post.id %>"></div></td>
              <script>
                $(document).on('turbolinks:load', function() {
                  let elem = document.querySelector('#level-<%= post.id %>');
                  if (elem == null) return;
                  elem.innerHTML = "";
                  let opt = {
                    size      : 36,
                    starOff   : '<%= asset_path('star-off.png') %>',
                    starOn    : '<%= asset_path('star-on.png') %>',
                    half      : false,
                    readOnly  : true,
                    score     : <%= post.level %>
                  }
                  raty(elem, opt);
                });
              </script>
              <td><%= link_to post.text, admin_post_path(post.id) %></td>
              <td>コメント数: <%= post.comments.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>