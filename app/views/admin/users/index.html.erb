<h1>Users</h1>
<%= form_with url: admin_users_path, local: true, method: :get do |f| %>
  <div>
    <p><%= f.radio_button :is_sex, "man" %>男性</p>
    <p><%= f.radio_button :is_sex, "woman" %>女性</p>
  </div>
  <div id="level">
    <%= f.label :level,'レベル ' %>
    <%= f.hidden_field :level, id:'level_star' %>
  </div>
  <div>
    <%= f.collection_select(:region_id, Region.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %>
  </div>
  <div>
    <%= f.text_field :name, placeholder: "Name", class: "search_input" %>
  </div>

  <%= f.submit "検索", class: "btn-sm btn-primary" %>
<% end %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>名前</th>
        <th>性別</th>
        <th>レベル</th>
        <th>地域</th>
        <th>ステータス</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= link_to user.name, admin_user_path(user) %></td>
        <td><%= user.is_sex == "man" ? '男性' : '女性' %></td>
        <td>
          <div id="level<%= user.id%>"></td>
           <script>
            $(document).on('turbolinks:load', function() {
              let elem = document.querySelector('#level<%= user.id%>');
              if (elem == null) return;
              elem.innerHTML = "";
              let opt = {
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                half      : false,
                readOnly: true,
                score: <%= user.level %>,
              }
              raty(elem, opt);
            });
           </script>
          </div>
        <td><%= user.region.name %></td>
        <td><%= user.is_active? ? '有効' : '退会' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>