<div class="container">
      <h3 class="ml-5"><strong>ユーザー編集</strong></h3>

<%= form_with model: @user, method: :patch do |f| %>

        <%#= render "uesr/error_messages", resource: resource %>
    <table class="">
        <tr>
        <td>ユーザーネーム </td>
        <td></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td>プロフィール画像</td>
        <td></td>
        <td><%= f.file_field :profile_image, accept: "image/:" %></td>
      </tr>
      <tr>
        <td>レベル</td>
        <td></td>
        <td id='level'>
        <%= f.label :level,'レベル ' %>
        <%= f.hidden_field :level, id:'level_star' %>
        </td>
      </tr>
      <tr>
        <td>好き、得意なショット</td>
        <td></td>
        <td><%= f.text_field :shot %></td>
      </tr>
      <tr>
        <td>地域</td>
        <td></td>
        <td><%= f.collection_select(:region_id, Region.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %></td>
      </tr>
       <tr>
          <td>性別</td>
          <td></td>
            <td>
              <p><%= f.radio_button :is_sex, :true %>男性</p>
              <p><%= f.radio_button :is_sex, :false %>女性</p>
            </td>
        </tr>
      <tr>
        <td>自己紹介</td>
        <td></td>
        <td><%= f.text_area :introduction, rows:'6', placeholder: "自己紹介文" %></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td><%= f.submit " 編　集　完　了 ", class:"btn btn-success" %></td>
      </tr>
  </table>
  <% end %>
  <!--<h3><strong>既に登録済みの方</strong></h3>-->
  <!--<%#= render "devise/shared/links" %>からログインしてください-->
</div>

<script>
  $(document).on('turbolinks:load', function() {
    let elem = document.querySelector('#level');
    if (elem == null) return;
    elem.innerHTML = "";
    let opt = {
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      scoreName: 'user[level]',
      score: <%=@user.level%>
    };
    raty(elem, opt);
  });
</script>
