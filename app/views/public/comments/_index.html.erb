<table>
  <tbody>
    <% post.comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to user_path(comment.user) do %>
          <%= image_tag comment.user.get_profile_image(50,50) %><br>
          <%= comment.user.name %>
        <% end %>
      </td>
      <td><%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %></td>
      <td>
        <% if comment.user == current_user %>
          <%= link_to "削除", post_comment_path(post.id, comment.id), method: :delete,class: "btn btn-danger", remote: true %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>