<h2>Follower Users</h2>
<% if @users.exists? %>
  <table class="table table-striped followers-index">
    <thead>
      <tr>
        <th></th>
        <th>名前</th>
        <th>性別</th>
        <th>レベル</th>
        <th>地域</th>
        <th>フォロー</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100), class: "rounded-circle d-block mx-auto" %></td>
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= user.is_sex? ? '男性' : '女性' %></td>
        <td>
          <div id="level<%= user.id%>"></td>
           <script>
            $(document).on('turbolinks:load', function() {
              let elem = document.querySelector('#level<%= user.id%>');
              if (elem == null) return;
              elem.innerHTML = "";
              let opt = {
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                half      : false,
                readOnly: true,
                score: <%= user.level %>,
              }
              raty(elem, opt);
            });
           </script>
          </div>
        <td><%= user.region.name %></td>
          <% if current_user != user %>
          <% if current_user.following?(user) %>
        <td><%= link_to "フォロー外す", user_relationship_path(user.id), class: "btn btn-danger" %></td>
          <% else %>
        <td><%= link_to "フォローする", user_relationship_path(user.id), class: "btn btn-success" %></td>
          <% end %>
          <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>