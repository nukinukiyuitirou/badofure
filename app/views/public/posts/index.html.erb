<div style="text-align:center;">
<h1 style="margin: 10px 0 0 0;">投稿一覧</h1>
<div class="container">
  <div class='row'>
   <div class="col-5"></div>
   <div class="col-2"><h3 style="margin: 50px 0 0 0;">検索</h3></div>
   <div class="col-5"></div>
  </div>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
    　<div class="d-flex">
        <div style="margin: 0 50px 0 105px;">性別</div>
        <div style="margin: 0 45px 0 62px;">レベル</div>
        <div style="margin: 0 10px 0 45px;">場所</div>
      </div>
    </div>
    <div class="col-3"></div>
  </div>
  <%= form_with url:posts_path, local: true, method: :get do |f| %>
  <div class='row'>
    <div class="col-3"></div>
    <div class="col-8">
        <div class="d-flex">
          <div style="margin: 0 25px 0 65px;"><%= f.radio_button :is_sex, "man" %>男性</div>
          <div style="margin: 0 10px 0 0;"><%= f.radio_button :is_sex, "woman" %>女性</div>
          <div id="level" class="mx-3">
            <%= f.label :level,'レベル ' %>
            <%= f.hidden_field :level, id:'level_star' %>
          </div>
          <div>
            <%= f.collection_select(:region_id, Region.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %>
          </div>
        </div>
  </div>
  <div class="col-1"></div>
</div>
<div class='row'>
  <div class="col-5"></div>
  <div class="col-2">
    <div class="d-flex">
      <div style="margin: 10px 0 20px 65px;"><%= button_tag type: "submit", class: "btn btn-default" do %>
        <i class="fa-solid fa-magnifying-glass"></i>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-5"></div>
</div>
</div>
<% end %>
  <table class="table table-striped post-index">
    <thead>
      <tr>
        <th></th>
        <th>名前</th>
        <th>性別</th>
        <th>レベル</th>
        <th>投稿文</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= link_to image_tag(post.user.get_profile_image(100,100)) ,user_path(post.user.id) %></td>
        <td><%= link_to post.user.name,user_path(post.user.id) %></td>
        <td><%= post.user.is_sex == "man" ? '男性' : '女性' %></td>
        <td><div id="level<%= post.id%>"></div></td>
        <script>
    $(document).on('turbolinks:load', function() {
      let elem = document.querySelector('#level<%= post.id%>');
      if (elem == null) return;
      elem.innerHTML = "";
      let opt = {
        size      : 36,
        starOff   : '<%= asset_path('star-off.png') %>',
        starOn    : '<%= asset_path('star-on.png') %>',
        half      : false,
        readOnly: true,
        score: <%= post.level %>,
      }
      raty(elem, opt);
    });
    </script>
        <td><%= link_to post.text,post_path(post.id) %></td>
　　    <td id="favorite_buttons_<%= post.id %>">
　　      <%= render "public/favorites/favorites", post: post %>
　　    </td>
　　    <td id="comment_counter">
          <%= render "public/comments/counter", post: post %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="pagination"><%= paginate @posts %></div>
  <script>
  $(document).on('turbolinks:load', function() {
    let elem = document.querySelector('#level');
    if (elem == null) return;
    elem.innerHTML = "";
    let opt = {
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      scoreName: 'level',
    };
    raty(elem, opt);
  });
</script>