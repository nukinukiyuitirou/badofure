<div style="text-align:center;">
  <h2 style="margin: 70px 0 0 0;">ログイン</h2>
  <div class="container">
    <div class="row">
      <div class="contact">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  　       <table class="table table-bordered">
            <tr>
          　   <th class="contact-item">メールアドレス</th>
              <td></td>
              <td class="contact-body"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
        　   <tr>
        　     <th class="contact-item">パスワード</th>
        　     <td></td>
        　     <td class="contact-body"><%= f.password_field :password, autocomplete:"current-password" %></td>
        　   </tr>
        　</table>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>